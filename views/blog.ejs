<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/user_profile.css">
    <link rel="stylesheet" href="/css/blog.css">
    <link rel="stylesheet" href="/css/neon-btn.css">
    <link rel="stylesheet" href="/css/loading.css">
    <link rel="stylesheet" href="/css/signup.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/main.css">
    
    <link rel="stylesheet" href="css/search-box.css">
    <title>Blog</title>
</head>

<body>

    <% if (Error==1) { %>
    <%- include("others/messages/Error") -%>

    <%} else if (Error==2) { %>
    <%- include("others/messages/Success") -%>

    <%} else if (Error==3) { %>
    <%- include("others/messages/Warning") -%>
    <% }%>

    <!---------- Login Form ----------->
    <%- include("others/login-form") -%>
    <!------------ Sign up Form --------->
    <%- include("others/signup-form") -%>
    <!----------------End  ----------------->
    <%- include("others/nav-bar") -%>



    <div class="container name-div">
        <h1 style="padding-top: 100px;" class="heading-name-text text-center">Posts</h1>
    </div>
    
    <div class="container u-m-container">
        <div class="row">
            <!-- ///////////// For Showing User Data -->
            <% for(var i=0; i<Post_data.length; i++) {%>
            <div class="col-md-12 container m-s-container m-2 mx-auto">
                <img width="500" height="400" class="post_pic" src=<%= Post_data[i].post_pic %> alt="404">
                <h1 class="subject text-capitalize"><%= Post_data[i].subject %> </h1>
                <h1 class="content text-wrap"><%= Post_data[i].content %> </h1>
                <form action="/post/get_info" method="POST">
                    <input type="hidden" name="id" value="<%= Post_data[i]._id %>">
                    <button class="read_more" type="submit">Read more...</button>
                </form>
                <h1 class="publish_date"><%= Post_data[i].publish_date %> ðŸ˜Ž <%= Post_data[i].user_name %>  </h1>
            </div>
            <% } %>
            <!--//////////////// End  -->
        </div>
        <div class="btns">
            <a href="/posts/get_list_of_5/<%= (Loop_var-1) %>" style="display: inline;" class="btn btn-primary" href="">
              <span></span><span></span><span></span><span></span>
              Prev
            </a>
            <button class="post-pagination btn"><%= Loop_var %></button>
            <a href="/posts/get_list_of_5/<%= (Loop_var+1) %>" style="display: inline;" class="btn btn-primary" href="">
              <span></span><span></span><span></span><span></span>
              Next
            </a>
          </div>
    </div>
    










    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
    <script src="/scripts/main.js"></script>
    <script src="/scripts/movie-api.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="/scripts/parallax.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        setTimeout(function () {
            $('.loading_screen').css("display", "none");
        }, 700)
    </script>
</body>

</html>