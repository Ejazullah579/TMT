<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/loading.css">
  <link rel="stylesheet" href="/css/signup.css">
  <link rel="stylesheet" href="/css/login.css">
  <link rel="stylesheet" href="/css/main.css">

  <!-- <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet"> -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  <link rel="stylesheet" href="css/search-box.css">
  <link rel="stylesheet" href="css/movie-genre.css">
  <link rel="stylesheet" href="css/carousal.css">


  <title>Top Media Trending</title>
</head>

<body>
  <!-- -------Loading screen------- -->
  <div class="loading_screen">
    <svg class="cir-svg">
      <circle cx="70" cy="70" r="70"></circle>
    </svg>
    <h1 id="samo">Loading...</h1>
  </div>
  <!-- -------Loading screen end------- -->
  <% if (Error==1) { %>
  <%- include("others/messages/Error") -%>

  <%} else if (Error==2) { %>
  <%- include("others/messages/Success") -%>

  <%} else if (Error==3) { %>
  <%- include("others/messages/Warning") -%>
  <% }%>
  <!---------- Login Form ----------->
  <%- include("others/login-form") -%>
  <!------------ Sign up Form --------->
  <%- include("others/signup-form") -%>
  <!----------------End  ----------------->
  <%- include("others/nav-bar") -%>



  <section class="row main-top">
    <div class="col-md-6 cols-xs-12 wrapper ">
      <ul id="scene" data-invert-x="false" data-invert-y="false" data-scaler-x="7" data-scaler-y="7"
        data-friction-x="0.1" data-friction-y="0.1" data-origin-x="0.5" data-origin-y="0.5">
        <li class="layer name" data-depth="0.35">
          <h1 id="custom-font">Welcome To</h1>
        </li>
        <li class="layer title" data-depth="0.30">
          <h1 class="end" id="custom-font">Top Media Trending</h1>
        </li>
        <li class="layer btn btn-main home-btns" data-depth="0.2">
          <a href="/movie-list" class="pf-btn">Movie List</a>
          <a href="#now-playing" class="contact-btn">Top Movies</a>
        </li>
      </ul>
    </div>
  </section>

  <section>

    <div class="swiper-container" id="bp">
      <div class="swiper-wrapper" id="bl">
        <div class="swiper-slide"><img onclick="movieSelected(72545,'movie')" width="220" height="auto"
            src="/images/cube2.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(474350,'movie')" width="220" height="auto"
            src="/images/cube8.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(431693,'movie')" width="220" height="auto"
            src="/images/cube1.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(420817,'movie')" width="220" height="auto"
            src="/images/cube4.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(287947,'movie')" width="220" height="auto"
            src="/images/cube6.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(299534,'movie')" width="220" height="auto"
            src="/images/cube3.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(446893,'movie')" width="220" height="auto"
            src="/images/cube7.jpg"></img></div>
        <div class="swiper-slide"><img onclick="movieSelected(512200,'movie')" width="220" height="auto"
            src="/images/cube5.jpg"></img></div>
      </div>
      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>
    </div>
  </section>

  <section>
    <div id="img-container" class="container">
      <div id="movies" class="well">
        <h2 class="c-down">Now Playing</h2>
        <div id="now-playing" class="row m-div">
          <ul class="list-group ul-main">
            <li classs="list-group-item" id="list-item1"></li>
          </ul>
        </div>
        <h2 class="c-down" id="top-movies">Top Movies</h2>
        <div class="row">
          <ul class="list-group ul-main">
            <li classs="list-group-item" id="list-item2"></li>
          </ul>
        </div>
      </div>
      <h2 class="c-down">Top Tv shows</h2>
      <div class="row">
        <ul class="list-group ul-main">
          <li classs="list-group-item" id="list-item3"></li>
        </ul>
      </div>
    </div>
  </section>

  <footer id="footer">
    <h1></h1>
  </footer>




  <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
  <script src="/scripts/main.js"></script>
  <script src="/scripts/movie-api.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script src="/scripts/movie-genre.js"></script>
  <script src="/scripts/parallax.min.js"></script>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    setTimeout(function () {
      $('.loading_screen').remove();
    }, 1500)
  </script>
  <script>
    gettoplist('movie', 'now_playing');
    gettoplist('movie', 'top_rated');
    gettoplist('tv', 'top_rated');
  </script>
  <script>
    var scene = document.getElementById("scene");
    var parallax = new Parallax(scene);
  </script>
  <!-- Swiper JS -->

  <!-- Initialize Swiper -->
  <script>
    var swiper = new Swiper('.swiper-container', {
      effect: 'coverflow',
      grabCursor: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      centeredSlides: true,
      initialSlide: 2,
      loop: true,
      freeMode: true,
      autoHeight: true,
      lazy: true,
      slidesPerView: 'auto',
      coverflowEffect: {
        rotate: 20,
        stretch: -10,
        depth: 100,
        modifier: 1.1,
        slideShadows: true,
      },
      pagination: {
        el: '.swiper-pagination',
      },
    });
  </script>
</body>

</html>